<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="112dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="57.6dp"
        android:layout_marginTop="24.3dp"
        android:layout_alignParentTop="true"
        android:orientation="vertical"
        android:background="@color/listview_bg_color">
        <LinearLayout
            android:layout_marginTop="3dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="12.6dp"
            android:paddingRight="12.6dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/park_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:text="***停车场"/>
            <TextView
                android:id="@+id/park_site"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/text_color_grey"
                android:textSize="12sp"
                android:text="车位"/>
            </LinearLayout>

        <TextView
            android:id="@+id/park_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="12.6dp"
            android:paddingRight="12.6dp"
            android:singleLine="true"
            android:textColor="@color/text_color_grey"
            android:textSize="12sp"
            android:text="地址"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/divider_line"/>
    </LinearLayout>

    <TextView
        android:id="@+id/detail_btn"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="center"
        android:textColor="@color/text_color_grey"
        android:textSize="12sp"
        android:text="详情 >"
        android:background="@color/listview_bg_color"/>
    <TextView
        android:id="@+id/park_navi_btn"
        android:layout_width="48.6dp"
        android:layout_height="48.6dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="13dp"
        android:gravity="center"
        android:text="导航"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:background="@drawable/navi_btn_bg"/>
</RelativeLayout>
