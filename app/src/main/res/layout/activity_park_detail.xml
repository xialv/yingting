<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="23dp"
    android:paddingRight="23dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/park_name"
        android:layout_width="315.3dp"
        android:layout_height="42dp"
        android:layout_marginTop="49.3dp"
        android:gravity="center"
        android:text="停车场name"
        android:textSize="16sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="空闲车位数:"
        android:textColor="@color/blue_button"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/park_site"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="空闲车位数"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="地点:"
        android:textColor="@color/blue_button"
        android:textSize="16sp"/>
    <TextView
        android:id="@+id/park_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="地点"
        android:textSize="16sp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="费用:"
        android:textColor="@color/blue_button"
        android:textSize="16sp"/>
    <TextView
        android:id="@+id/park_fee"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="费用"
        android:textSize="16sp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="其他服务:"
        android:textColor="@color/blue_button"
        android:textSize="16sp"/>
    <TextView
        android:id="@+id/park_service"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="其他服务"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/navi_btn"
        android:layout_width="315.3dp"
        android:layout_height="42dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="49.3dp"
        android:gravity="center"
        android:text="到这里去"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:background="@drawable/button_bg"/>


</LinearLayout>
