<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.yitingche.demo.view.SlidingTab
        android:id="@+id/id_tab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:dividerMargin="15dp"
        app:indicatorColor="@color/tab_indicator_color"
        app:indicatorHeight="2dp"
        app:showIndicator="true"
        android:background="@color/actionbar_bg_color"/>

    <android.support.v4.view.ViewPager
        android:layout_below="@+id/id_tab"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/id_view_pager"/>

</LinearLayout>
