<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".activity.FirstLoading">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/loading_screen"

        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:orientation="vertical"
        >

        <RelativeLayout
            android:id="@+id/id_r_layout_char_p_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            >
            <ImageView
                android:id="@+id/id_imageView_char_p"
                android:layout_width="118dp"
                android:layout_height="168dp"
                android:background="@mipmap/loading_char_p"
                />
        </RelativeLayout>


        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="飞飞停车"
            android:textColor="#FFFFFF"
            android:textSize="16pt"
            />
    </LinearLayout>



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"

        android:layout_alignParentBottom="true"
        android:layout_marginBottom="96dp"
        android:textSize="8pt"
        android:textColor="#9B9B9B"
        android:alpha="0.3"
        android:text="MTC design"
        />



</RelativeLayout>
